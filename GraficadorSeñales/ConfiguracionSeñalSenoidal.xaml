<UserControl x:Class="GraficadorSeñales.ConfiguracionSeñalSenoidal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraficadorSeñales"
             mc:Ignorable="d" Height="162" Width="130">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="6,6,0,0" TextWrapping="Wrap" Text="Amplitud" VerticalAlignment="Top" />
        <TextBox x:Name="txtAmplitud" HorizontalAlignment="Left" Height="23" Margin="6,27,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="6,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-7.145,-3.146" Width="32" Text="Fase:" Height="18" />
        <TextBox x:Name="txtFase" HorizontalAlignment="Left" Height="23" Margin="6,78,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="6,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" ><Run Text="Frecuencia"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="txtFrecuencia" HorizontalAlignment="Left" Height="23" Margin="6,127,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" />

    </Grid>
</UserControl>
